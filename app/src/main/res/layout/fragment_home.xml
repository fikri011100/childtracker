<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    tools:context=".home.HomeFragment">

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_baby"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Tumbuh Kembang"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_top" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.67" />

    <View
        android:id="@+id/bg_tumbuhkembang"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <ImageView
        android:id="@+id/img_tumbuhkembang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_rising"
        app:layout_constraintBottom_toBottomOf="@id/bg_tumbuhkembang"
        app:layout_constraintLeft_toLeftOf="@id/bg_tumbuhkembang"
        app:layout_constraintRight_toRightOf="@id/bg_tumbuhkembang"
        app:layout_constraintTop_toTopOf="@id/bg_tumbuhkembang" />

    <TextView
        android:id="@+id/text_tumbuhkembang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Tumbuh Kembang"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_tumbuhkembang"
        app:layout_constraintRight_toRightOf="@+id/bg_tumbuhkembang"
        app:layout_constraintTop_toBottomOf="@+id/bg_tumbuhkembang" />

    <View
        android:id="@+id/bg_imunisasi"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_menu"
        app:layout_constraintLeft_toRightOf="@+id/guideline1"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <ImageView
        android:id="@+id/img_imunisasi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_suntik"
        app:layout_constraintBottom_toBottomOf="@id/bg_imunisasi"
        app:layout_constraintLeft_toLeftOf="@id/bg_imunisasi"
        app:layout_constraintRight_toRightOf="@id/bg_imunisasi"
        app:layout_constraintTop_toTopOf="@id/bg_imunisasi" />

    <TextView
        android:id="@+id/text_imunisasi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Imunisasi"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_imunisasi"
        app:layout_constraintRight_toRightOf="@+id/bg_imunisasi"
        app:layout_constraintTop_toBottomOf="@+id/bg_imunisasi" />

    <View
        android:id="@+id/bg_about"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_menu"
        app:layout_constraintLeft_toRightOf="@+id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />

    <ImageView
        android:id="@+id/img_about"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_about"
        app:layout_constraintBottom_toBottomOf="@id/bg_about"
        app:layout_constraintLeft_toLeftOf="@id/bg_about"
        app:layout_constraintRight_toRightOf="@id/bg_about"
        app:layout_constraintTop_toTopOf="@id/bg_about" />

    <TextView
        android:id="@+id/text_about"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Tentang Aplikasi"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/bg_about"
        app:layout_constraintRight_toRightOf="@+id/bg_about"
        app:layout_constraintTop_toBottomOf="@+id/bg_about" />

</androidx.constraintlayout.widget.ConstraintLayout>